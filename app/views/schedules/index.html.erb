<div class="main_container">
  <div class="title">
    <h2>スケジュール一覧</h2>
  </div>
  <% if flash[:notice] %>
    <div class="notice">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
  
    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%=schedule.id %></td>
          <td><%=schedule.title %></td>
          <td><%=schedule.start_day %></td>
          <td><%=schedule.end_day %></td>
          <td><%=schedule.all_day %></td>
          <td><%=schedule.updated_at.to_s(:datetime_jp) %></td>
          <td><%= link_to "確認",schedule %></td>
          <td><%= link_to "編集",[:edit,schedule] %></td>
          <td><%= link_to "削除",schedule,method: :delete,data:{confirm: "本当に削除しますか？"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="new">
   <p><%= link_to"スケジュール新規登録",:new_schedule %></p>
  </div>
</div>